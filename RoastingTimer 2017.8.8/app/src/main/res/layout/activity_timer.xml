<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.com.loastingtimer.TimerActivity"
    android:onClick="LinearOnClick">



        <TextView
            android:id="@+id/text_timer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textSize="55dp"
            android:background="#4682B4"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFACD">

            <TextView
                android:id="@+id/text_origin"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.5"
                android:text="원산지"
                android:textAlignment="center"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/et_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_weight="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/et_origin"
            android:background="#FFFACD">
        <TextView
            android:id="@+id/text_tem"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="온도"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_tem"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/text_tem"
                android:layout_weight="1"
                android:inputType="number"
                android:text=""
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/text_tem2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="℃"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_humi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="습도"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/et_humi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text=""
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/text_humi2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="%"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFACD">
            <Button
                android:id="@+id/btn_tStart"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="시  작"
                android:textSize="25dp"
                android:background="#A9A9A9"
                android:textColor="#ffffff"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_check"
                android:onClick="onClick"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="기  록"
                android:textSize="25dp"
                android:background="#A9A9A9"
                android:textColor="#ffffff"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFACD">
            <Button
                android:id="@+id/btn_1st"
                android:onClick="onClick"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="1 차  팝"
                android:textSize="25dp"
                android:background="#A9A9A9"
                android:textColor="#ffffff"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_2st"
                android:onClick="onClick"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="2 차  팝"
                android:textSize="25dp"
                android:background="#A9A9A9"
                android:textColor="#ffffff"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4682B4"
                android:scrollbars="vertical"
                android:textColor="#ffffff"
                android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFACD">

                <Button
                    android:id="@+id/btn_save"
                    android:onClick="onClick"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="저  장"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:background="#A9A9A9"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:onClick="onClick"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="취  소"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:background="#A9A9A9"
                    android:textColor="#ffffff"/>

            </LinearLayout>

</LinearLayout>
